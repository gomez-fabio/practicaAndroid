<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp">


    <ImageView
        android:id="@+id/dish_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/dish_image_description"
        android:src="@drawable/f00_burguer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/dish_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/dish_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Precio del plato"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dish_image"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:text="Nombre del plato" />

    <TextView
        android:id="@+id/dish_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dish_image"
        app:layout_constraintTop_toBottomOf="@+id/dish_name"
        tools:text="DescripciÃ³n del plato" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dish_image"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/a00_alergeno_altramuces"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a00_alergeno_altramuces" />

        <ImageView
            android:id="@+id/a01_alergeno_apio"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintStart_toEndOf="@+id/a00_alergeno_altramuces"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a01_alergeno_apio" />

        <ImageView
            android:id="@+id/a02_alergeno_azufre"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintStart_toEndOf="@+id/a01_alergeno_apio"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a02_alergeno_azufre" />

        <ImageView
            android:id="@+id/a03_alergeno_cacahuete"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintStart_toEndOf="@+id/a02_alergeno_azufre"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a03_alergeno_cacahuete" />

        <ImageView
            android:id="@+id/a04_alergeno_crustaceo"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintStart_toEndOf="@+id/a03_alergeno_cacahuete"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a04_alergeno_crustaceo" />

        <ImageView
            android:id="@+id/a05_alergeno_frutos"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintStart_toEndOf="@+id/a04_alergeno_crustaceo"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a05_alergeno_frutos" />

        <ImageView
            android:id="@+id/a06_alergeno_gluten"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintStart_toEndOf="@+id/a05_alergeno_frutos"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/a06_alergeno_gluten" />

        <ImageView
            android:id="@+id/a07_alergeno_huevos"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/a07_alergeno_huevos" />

        <ImageView
            android:id="@+id/a08_alergeno_lacteo"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a07_alergeno_huevos"
            app:srcCompat="@drawable/a08_alergeno_lacteo" />

        <ImageView
            android:id="@+id/a09_alergeno_molusco"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a08_alergeno_lacteo"
            app:srcCompat="@drawable/a09_alergeno_molusco" />

        <ImageView
            android:id="@+id/a10_alergeno_mostaza"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a09_alergeno_molusco"
            app:srcCompat="@drawable/a10_alergeno_mostaza" />

        <ImageView
            android:id="@+id/a11_alergeno_pescado"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a10_alergeno_mostaza"
            app:srcCompat="@drawable/a11_alergeno_pescado" />

        <ImageView
            android:id="@+id/a12_alergeno_sesamo"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a11_alergeno_pescado"
            app:srcCompat="@drawable/a12_alergeno_sesamo" />

        <ImageView
            android:id="@+id/a13_alergeno_soja"
            android:layout_width="@dimen/allergen_size"
            android:layout_height="@dimen/allergen_size"
            android:layout_marginLeft="@dimen/default_margin"
            android:contentDescription="@string/allergen_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/a12_alergeno_sesamo"
            app:srcCompat="@drawable/a13_alergeno_soja" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>